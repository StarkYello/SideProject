<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:text="Title"
        android:textSize="20dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/start_post_title_text"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/start_post_title_text"
        android:id="@+id/title_card"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#1F5491"
        app:cardCornerRadius="8dp"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="8dp"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:text=""
                android:id="@+id/title_input"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:gravity="start" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:text="Description"
        android:textSize="12dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/title_card"
        android:id="@+id/start_post_description_text"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/start_post_description_text"
        android:id="@+id/description_card"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#1F5491"
        app:layout_constraintBottom_toTopOf="@id/start_post_tag_text"
        app:cardCornerRadius="8dp"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="8dp"
            android:layout_margin="1dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/description_input"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:gravity="start" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:text="Tag"
        android:textSize="20dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/description_card"
        android:id="@+id/start_post_tag_text"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/start_post_tag_text"
        app:layout_constraintBottom_toTopOf="@id/post_submit_btn"
        android:id="@+id/tag_card"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#1F5491"
        app:cardCornerRadius="8dp"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="8dp"
            android:layout_margin="1dp"
            >
            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:completionThreshold="1"
                android:text=""
                android:id="@+id/post_tag_input"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:gravity="start" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/post_submit_btn"
        android:src="@drawable/solution_submit_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag_card"
        android:layout_margin="24dp"
        android:scaleType="fitXY"
        android:background="@null"


        />

</androidx.constraintlayout.widget.ConstraintLayout>